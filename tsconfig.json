{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2015",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "src/js",
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "typeRoots": [
      "src/script"
    ]
  },
  "include": [
    "src/script/*", "src/components/*", "src/components/*/*"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}